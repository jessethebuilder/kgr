<p id="notice"><%= notice %></p>

<h1>Listing Djs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Short bio</th>
      <th>Keywords</th>
      <th>Headshot</th>
      <th>Slider image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @djs.each do |dj| %>
      <tr>
        <td><%= dj.name %></td>
        <td><%= dj.bio %></td>
        <td><%= dj.short_bio %></td>
        <td><%= dj.keywords %></td>
        <td><%= dj.headshot %></td>
        <td><%= dj.slider_image %></td>
        <td><%= link_to 'Show', dj %></td>
        <td><%= link_to 'Edit', edit_dj_path(dj) %></td>
        <td><%= link_to 'Destroy', dj, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

