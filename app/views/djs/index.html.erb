<div id="djs" class="block_list">
  <h1>Our DJs</h1>
  <% @djs.in_groups_of(2) do |dj_group| %>
    <div class="row list_row">
      <% dj_group.each do |dj| %>
        <div class="col-md-6 list_col">
          <% if dj -%>
            <div class="list_item">
              <div class="image_cell">
                <%= image_tag dj.head_shot.url(:medium), class: 'featured_image' %>
              </div>

              <div class="info_cell">

                <div class="info">
                  <div class="title">
                    <%= link_to dj.name, dj %>

                  </div>

                  <div class="tag_line">
                    <%= dj.tag_line %>
                  </div>

                  <div class="description">
                    <%= dj.short_bio.to_s %>
                  </div>

                  <hr>

                  <div class="social_networking_links">
                    <%= link_to dj.facebook_url, target: '_blank' do %>
                      <%= image_tag 'social_networking/small_facebook.png' %>
                    <% end if dj.facebook_url %>

                    <%= link_to dj.twitter_url, target: '_blank' do %>
                      <%= image_tag 'social_networking/twitter_small.png' %>
                    <% end if dj.twitter_url %>

                    <%= mail_to dj.email, target: '_blank' do %>
                      <%= image_tag 'social_networking/small_mail.png' %>
                    <% end if dj.email %>
                  </div>
                </div>
              </div>

            </div>
          <% end -%>

          <!--<div class="clearfix"></div>-->

        </div><!-- col -->
      <% end %>
    </div><!-- row -->
  <% end %><!-- groups -->
</div>

<% content_for :side_bar do %>
  <%= render :partial => 'events/embedded_monthly' %>
<% end %>

<script>
  raiseAndLowerElement('.social_networking_links img');
</script>